{
    "name": "carllee/line-pay-offline-v4",
    "description": "LINE Pay Offline V4 API SDK for PHP. Supports POS payment, capture, void, refund operations. Type-safe with PHP 8.1+ enums.",
    "type": "library",
    "keywords": [
        "line",
        "line-pay",
        "linepay",
        "payment",
        "offline",
        "pos",
        "barcode",
        "qrcode",
        "api",
        "sdk",
        "php",
        "taiwan",
        "japan",
        "thailand",
        "LINE Pay",
        "金流",
        "實體支付",
        "條碼支付"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Carl Lee",
            "email": "carllee1983@gmail.com"
        }
    ],
    "homepage": "https://github.com/CarlLee1983/line-pay-offline-v4-php",
    "support": {
        "issues": "https://github.com/CarlLee1983/line-pay-offline-v4-php/issues",
        "source": "https://github.com/CarlLee1983/line-pay-offline-v4-php"
    },
    "require": {
        "php": "^8.1",
        "carllee/line-pay-core-v4": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10 || ^2.0",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "LinePay\\Offline\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LinePay\\Offline\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --no-coverage",
        "test:coverage": "@php -r \"exit(extension_loaded('xdebug') || extension_loaded('pcov') ? 0 : 1);\" && phpunit --coverage-html coverage || echo 'No coverage driver. Running without coverage.' && phpunit --no-coverage",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "lint:fix": "php-cs-fixer fix",
        "analyze": "phpstan analyse src tests --level=max"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}